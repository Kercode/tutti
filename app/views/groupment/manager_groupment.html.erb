<div class="container-fluid mt-3">
  <h1>Commandes du groupement (<%= @groupment.groupment.name %>)</h1>
  <div class="d-flex">
    <div class="w-50">
    <% total = 0 %>
      <% @group.each do |group| %>
        <% order = Order.where(authentication_id: group.authentication_id) %>
        <% if order != [] %>
          <div class="m-3" style="background-color: orange; border: 2px solid black;">
            <%= group.authentication.fullname %>
            <% order.each do |o| %>
              <p>Numero de commande : <%= o.id %></p>
              <p>Total : <%= render_price_to_euros(o.total) %></p>
              <% total += o.total %>
            <%= link_to 'Voir', order_path(o.id), id: 'btns' %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="w-50 h-400 bg-primary">
      <p>Total: <%= total %></p>
      <p>Date de livraison :</p>
      <p>Responsable :</p>
      <p>Accompagnateur :</p>
    </div>
  </div>
</div>